extends _layout

block vars
  - var pageTitle = "Contacts page";
  - var pageClass = "contactspage";
  - var pageActive = "contactspage";
block content
  .main
    .main-info.products
      .main-info__inner.container.page-container.products.d-contacts
        .main-info__block.products
          .custom-border-title.products.contacts Contacts
          h1.main-info__title.products.contacts Need a consultation? Call us!
          .main-info__txt.products.contacts all contact information of our company is collected here
          a(href="#").main-info__btn.products.contacts explore
        .main-info__img.products
          img(src="./img/images/bro4.svg" alt="img").main-info__img-img.products.contacts
          img(src="./img/images/bro3.svg" alt="img").main-info__img-img.products.contacts.second-back-img.d-contacts
          //img(src="./img/images/bro4.png").main-info__img-img.products.contacts
    .get-touch.d-contacts
      .get-touch__inner.page-container.d-contacts
        .page-wide-block__left-side.contacts
          .custom-block-title.contacts.d-contacts(data-aos="fade-right") Get in touch
          .contact-row(data-aos="fade-right")
            .contact-row__ico
              img(src="./img/images/user_circle.svg" alt="img").contact-row__ico-ico
            .contact-row__name.d-contacts Director:
            .contact-row__txt.d-contacts Volodymyr Lobanov
          .contact-row(data-aos="fade-right")
            .contact-row__ico
              img(src="./img/images/mail.svg" alt="img").contact-row__ico-ico
            .contact-row__name.d-contacts E-Mail:
            .contact-row__txt.d-contacts sales@hicell.net
          .contact-row(data-aos="fade-right")
            .contact-row__ico
              img(src="./img/images/phone.svg" alt="img").contact-row__ico-ico
            .contact-row__name.d-contacts Tel UK:
            .contact-row__txt.d-contacts +447506865214
          .contact-row(data-aos="fade-right")
            .contact-row__ico
              img(src="./img/images/location_outline.svg" alt="img").contact-row__ico-ico
            .contact-row__name.d-contacts Address:
            .contact-row__txt.d-contacts 100 New Bond Street, First Floor, London, United Kingdom, W1S 1SP
          .contact-row(data-aos="fade-right")
            .contact-row__ico
              img(src="./img/images/linkedin.png" alt="img").contact-row__ico-ico
            .contact-row__name.d-contacts LinkedIn:
            a(href="#").contact-row__txt.d-contacts Hicell
        .page-wide-block__right-side.contacts
          .right-side__img
            img(src="./img/images/contacts.svg" alt="img").right-side__img.contacts.d-contacts
            //img(src="./img/images/illustration11.png").right-side__img.contacts
    .custom-geolocation.d-contacts
      .custom-geolocation__inner.page-container.d-contacts
        .custom-block-title.our.d-contacts Our geolocation
          .custom-block-txt.our.d-contacts press the button to view position on map
          a(href="#").custom-block-btn.geolocation.d-contacts explore
    .custom-wrap.contact-us.d-contacts(data-aos="fade-down")
      .page-wide-block.contact-us
        .page-wide-block__inner.page-container.contact-us
          .custom-border-title.contact-us.d-contacts contact us
          .contact-us__container
            .page-wide-block__left-side.contact-us
              .contact-us__text.d-contacts *If you have any question please visit our Help desk. If you can`t find the answer please call us or e-mail
              form
                .form-row
                  .form-col.site-form__row
                    .form-row__txt.d-contacts Your name
                    input(type="text").form-row__input.required
                  .form-col.email.site-form__row
                    .form-row__txt.d-contacts Your email
                    input(type="email").form-row__input.email.required
                .form-row.text-area.site-form__row
                  .form-row__txt.d-contacts Type your message
                  textarea.form-row__textarea.required
                .form-row__submit
                  button(type="submit").form-row__submit-btn
                  a(href="").form-row__submit-i.site-form-submit-js send
            .page-wide-block__right-side.contact-us.products
              img(src="./img/images/bro2.svg" alt="img").contact-us__img
              //img(src="./img/images/bro2.png").contact-us__img





