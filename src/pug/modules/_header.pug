header.header
  .header-inner.page-container
    .header-top
      .header-top__logo
        img(src="./img/images/hicell-logo.png").header-top__logo-img
      .header-top__content
        .header-top__languages
          a(href="#").header-top__languages-item RU
          a(href="#").header-top__languages-item.active EN
        .header-top__search
          form
            input(type="text").header-top__input
            //img(src="./img/images/search-icon.png").header-top__search-ico
            button(type="submit")
            picture
              source(srcset="./img/images/search-icon.webp" type="image/webp")
              img(src="./img/images/search-icon.png" alt="img").header-top__search-ico
        .header-top__contacts
          a(href="mailto: sales@hicell.net").header-top__contacts-mail sales@hicell.net
          a(href="tel: +447506865214").header-top__contacts-phone +447506865214
    .header-bottom
      .header-bottom__list
        a(href="#").header-bottom__item PRODUCTS
        a(href="#").header-bottom__item SOLUTIONS
        a(href="#").header-bottom__item PRICES
        a(href="#").header-bottom__item FAQ
        a(href="#").header-bottom__item INTEGRATION
        a(href="#").header-bottom__item BLOG
        a(href="#").header-bottom__item EVENTS
        a(href="#").header-bottom__item CONTACT US
      .header-bottom__autorize
        a(href="#").header-bottom__log-in LOG IN
        a(href="#").header-bottom__log-in.sign-up SIGN UP
    .header-mobile
      .header-mobile__inner
        .header-mobile__logo
          img(src="./img/images/hicell-logo2.png").header-mobile__logo-img
        .header-mobile__right
          .header-mobile__search
            img(src="./img/images/mobile_search.png").header-mobile__search-img
          .header-mobile__menu
            img(src="./img/images/menu1.svg").header-mobile__menu-img
            img(src="./img/images/cancel.svg").header-mobile__close-img.d-hidden
            .header-mobile__list
              a(href="#").header-mobile__item PRODUCTS
              a(href="#").header-mobile__item SOLUTIONS
              a(href="#").header-mobile__item PRICES
              a(href="#").header-mobile__item FAQ
              a(href="#").header-mobile__item INTEGRATION
              a(href="#").header-mobile__item BLOG
              a(href="#").header-mobile__item EVENTS
              a(href="#").header-mobile__item CONTACT US
              .header-mobile__btns
                a(href="#").header-bottom__log-in LOG IN
                a(href="#").header-bottom__log-in.sign-up SIGN UP







