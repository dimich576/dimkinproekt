//include _mixins

block vars

doctype html
html(lang="ru")
	head
		meta(charset="utf-8")
		meta(http-equiv='X-UA-Compatible', content='IE=edge')
		meta(name="viewport" content="initial-scale=1.0, width=device-width")
		title Hicell-Telecommunication
		meta(name="description", content='description content')

		//favicon
		link(rel="icon" href="./img/favicon/favicon.ico" type="image/x-icon")


		link(rel='stylesheet', href='css/libs.min.css')
		link(rel="stylesheet", href="https://unpkg.com/aos@2.3.1/dist/aos.css")
		link(rel='stylesheet', href='css/style.css')

		link(rel="preload" href="./fonts/FuturaBookC.woff2" as="font" type="font/woff2" crossorigin)
		link(rel="preload" href="./fonts/FuturaMediumC.woff2" as="font" type="font/woff2" crossorigin)
		link(rel="preload" href="./fonts/Roboto-Medium.woff2" as="font" type="font/woff2" crossorigin)
		link(rel="preload" href="./fonts/Roboto-Italic.woff2" as="font" type="font/woff2" crossorigin)
		link(rel="preload" href="./fonts/Roboto-Regular.woff2" as="font" type="font/woff2" crossorigin)
		link(rel="preload" href="./fonts/Roboto-MediumItalic.woff2" as="font" type="font/woff2" crossorigin)
		link(rel="preload" href="./fonts/Roboto-LightItalic.woff2" as="font" type="font/woff2" crossorigin)

	body(class="page " + pageClass)
		.page__wrapper.b-lazy.webp-img(data-webp="img/images/MainHD.webp"
			data-img="img/images/MainHD.jpg")
			include modules/_header

			main.page__content
				block content

			include modules/_footer
			include modules/_popup
		block scripts
			script(src='js/libs.min.js')
			script(src='js/main.js')
			script(src="https://unpkg.com/aos@2.3.1/dist/aos.js")
