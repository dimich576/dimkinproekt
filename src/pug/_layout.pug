//include _mixins

block vars

doctype html
html(lang="en")
	head
		meta(charset="utf-8")
		meta(http-equiv='X-UA-Compatible', content='IE=edge')
		meta(name="viewport" content="initial-scale=1.0, width=device-width")
		title Hicell-Telecommunication
		meta(name="description", content='description content')

		//favicon
		link(rel="icon" href="./img/favicon/favicon.ico" type="image/x-icon")


		link(rel='stylesheet', href='./css/libs.min.css')
		link(rel='stylesheet', href='./css/style.min.css')


		//link(rel="preload" href="./fonts/Roboto-BoldItalic.woff" as="font" type="font/woff" crossorigin)
		link(rel="preload" href="./fonts/Roboto-BoldItalic.woff2" as="font" type="font/woff2" crossorigin)
		//link(rel="preload" href="./fonts/Roboto-Medium.woff" as="font" type="font/woff" crossorigin)
		link(rel="preload" href="./fonts/Roboto-Medium.woff2" as="font" type="font/woff2" crossorigin)
		//link(rel="preload" href="./fonts/Roboto-Italic.woff" as="font" type="font/woff" crossorigin)
		link(rel="preload" href="./fonts/Roboto-Italic.woff2" as="font" type="font/woff2" crossorigin)
		//link(rel="preload" href="./fonts/Roboto-Regular.woff" as="font" type="font/woff" crossorigin)
		link(rel="preload" href="./fonts/Roboto-Regular.woff2" as="font" type="font/woff2" crossorigin)
		//link(rel="preload" href="./fonts/Roboto-MediumItalic.woff" as="font" type="font/woff" crossorigin)
		link(rel="preload" href="./fonts/Roboto-MediumItalic.woff2" as="font" type="font/woff2" crossorigin)
		//link(rel="preload" href="./fonts/Roboto-LightItalic.woff" as="font" type="font/woff" crossorigin)
		link(rel="preload" href="./fonts/Roboto-LightItalic.woff2" as="font" type="font/woff2" crossorigin)

	body(class="page " + pageClass)
		.page__wrapper.b-lazy.webp-img(
				data-webp=(pageClass === 'homepage' ? "./img/images/mainhd.webp" : "./img/images/main-space-bg.webp")
				data-webp-mobile="./img/images/mainhd-mobile2.webp"
				data-img=(pageClass === 'homepage' ? "./img/images/mainhd.jpg" : "./img/images/main-space-bg.jpg")
				data-img-mobile="./img/images/mainhd-mobile2.jpg"
		)
			include modules/_header

			main.page__content
				block content

			include modules/_footer
			include modules/_popup
		block scripts
			script(src='js/libs.min.js')
			script(src='js/main.min.js')
